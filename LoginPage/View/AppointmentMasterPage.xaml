<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="LoginPage.AppointmentMasterPage" IsPresented="true">
	<MasterDetailPage.Master>
		<ContentPage Title="Appointments" xmlns:ViewModel="clr-namespace:LoginPage">
			<!--	<ContentPage.BindingContext>
				<ViewModel:PrescriberViewModel>
				</ViewModel:PrescriberViewModel>
			</ContentPage.BindingContext>-->
			<ContentPage.Content>
				<StackLayout Orientation="Vertical" BackgroundColor="Silver">
					<Entry Placeholder="Search appointments ..." x:Name="appointmentName" HeightRequest="30" Margin="5,5,5,0" TextChanged="Handle_TextChanged" />
					<ListView ItemsSource="{Binding AppointmentList}" Margin="5" ItemSelected="Handle_ItemSelected" x:Name="appointmentList" HasUnevenRows="true" SeparatorColor="Silver" IsVisible="true">
						<ListView.ItemTemplate>
							<DataTemplate>
								<ViewCell>
									<StackLayout Orientation="Vertical">
										<Label Text="{Binding description}" Margin="4">
										</Label>
									</StackLayout>
								</ViewCell>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
				</StackLayout>
			</ContentPage.Content>
		</ContentPage>
	</MasterDetailPage.Master>
	<MasterDetailPage.Detail>
		<ContentPage>
			<ContentPage.Content>
			</ContentPage.Content>
		</ContentPage>
	</MasterDetailPage.Detail>
</MasterDetailPage>